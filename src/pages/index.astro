---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME } from "@consts";

import { Image } from 'astro:assets';
import WillSteppPhoto from '../images/ws-moshed.jpg';

const books = (await getCollection("books"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <Image src={WillSteppPhoto} alt="Will Stepp (moshed)" />
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p>
            Will Stepp lives and writes in Rome, Georgia. His collection of short stories, <em>1986</em>, will be published in fall of 2024.
          </p>
        </article>
      </section>
      
      <section class="space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Books
          </h5>
        </div>
        <ul class="flex flex-col gap-4">
          {books.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          Contact
        </h5>
        <ul class="flex flex-wrap gap-2">
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
